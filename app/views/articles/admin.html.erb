<h1>Admin Page</h1>

<style>
  th, td {
    padding: 10px;
  }
</style>

<%= render 'shared/search' %>
<h1></h1>


<table>
  <tr>
    <th></th>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th colspan="2"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= image_tag(article.image, class: "img-responsive", alt: "(Image)") %></td>
      <td><%= link_to article.title, article_path(article) %></td>
      <td>$<%= article.text %></td>
      <td><%= article.quantity %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<h1></h1>

<%= link_to 'New Item', new_article_path %>
