<h1>Shopping Cart</h1>
<h3>Items in Cart:</h3>

<style>
  th, td {
    padding: 10px;
  }
</style>

<table>
  <tr>
    <th></th>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>

  <% @cart.each do |item| %>
    <tr>
      <td><%= image_tag(item.image, class: "img-responsive", alt: "(Image)") %></td>
      <td><%= link_to item.item, edit_cart_path(item) %></td>
      <td>$<%= item.price %></td>
      <td><%= item.quantity %></td>
      <td><%= link_to 'Remove from Cart', cart_path(item), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Back', articles_path %>
