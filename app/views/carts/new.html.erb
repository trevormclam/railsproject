<h1>New Item</h1>

<%= form_with scope: :cart, url: carts_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_area :price %>
  </p>

  <p>
    <%= form.submit "Add to cart" %>
  </p>
<% end %>
