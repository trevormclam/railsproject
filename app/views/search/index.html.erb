<h1>Items You Searched For</h1>
<table>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th colspan="2"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>

</table>

<%= link_to 'Back', articles_path %>
